@import url(https://fonts.googleapis.com/css?family=Roboto&subset=cyrillic-ext,latin-ext,latin:400,700,500,700italic,500italic,400italic,300,300italic);

body {
  padding: 0;
  margin: 0;
  font-family: 'Roboto', sans-serif;
  background-color: #ffffff;
}

a {
  color: #666;
}

.intro {
  margin-top: 100px;
  padding-left: 30px;
  padding-right: 30px;
  text-align: center;
  h1 {
    font-weight: 600;
    font-size: 40px;
  }
}

.footnote {
  font-size: 12px;
  font-weight: 300;
  margin-top: 100px;
}

.material-icons {
  -webkit-font-feature-settings: 'liga';
}
