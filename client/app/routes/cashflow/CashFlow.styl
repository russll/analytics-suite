.paginator
	color: rgba(0,0,0,0.6);
	line-height: 42px

	i.material-icons
		display inline-block;
		vertical-align middle;
		margin 0 5px
		cursor pointer

span.filter__title
	line-height 48px
	color #000!important

.cf__tax-table
	border-spacing 0
	border-collapse collapse
	font-size 12px

	tbody tr:hover
		background-color rgba(150,150,150,0.1)
	th
		color #666;
		font-weight 200;
		height 48px;
		padding 0 10px
		line-height 48px;
		white-space nowrap;

	td
		color #000;
		height 48px;
		padding 0 10px
		line-height 48px;
		white-space nowrap;

	.right
		text-align right;

@media screen and (max-width: 840px)
	td.mobile
		width: 130px

	.filter
		margin: auto;
		width: 260px;

	.cf__tax-table
		margin auto;
		tr
			cursor pointer;
		.regular
			display none;

	.card-detail__body
		padding 20px
		font-size 14px

	.card-detail__data
		font-size: 12px;

		.title
			line-height: 42px;
			height: 42px;
			font-size: 12px;
			background-color: rgba(150,150,150,0.1);
			text-transform: uppercase;
			text-overflow: ellipsis;
			white-space: nowrap;
			overflow: hidden;
			cursor: pointer;
			padding-left: 16px;
			padding-right: 16px;

		.value
			background-color #fff
			color #000;
			padding 12px 10px
			text-transform lowercase;
			text-align right